ifeq "$(OS)" "Windows_NT"
	WCX := .wcx64
	PIC :=
else
	WCX := .wcx64
	PIC := -fPIC
endif

TOTALCMD_ZSTD_VERSION := "$(patsubst v%,%,$(shell git describe --tags --abbrev=0))"
ZSTD_VERSION := "$(patsubst v%,%,$(shell git -C ext/zstd describe --tags --abbrev=0))"

OBJ := .o
ARCH := .a
AR := ar
CXXAR := -O3 -std=c++14 -pedantic -Wall -Wextra -pipe $(PIC)
CCAR := -O3 -std=c11 -pipe $(PIC)

OUTDIR := out/
BLDDIR := $(OUTDIR)build/
OBJDIR := $(BLDDIR)obj/
SRCDIR := src/
